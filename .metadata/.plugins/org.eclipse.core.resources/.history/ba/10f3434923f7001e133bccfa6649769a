package org.jsp.ecommerce.service;

import org.jsp.ecommerce.dao.CartDao;
import org.jsp.ecommerce.dto.ResponseStructure;
import org.jsp.ecommerce.model.Cart;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

@Service
public class CartService {
	@Autowired
	private CartDao dao;

	public ResponseEntity<ResponseStructure<Cart>> save(Cart cart) {
		ResponseStructure<Cart> str=new ResponseStructure<>();
		str.setData(dao.save(null));
		str.setMessage("Added to cart");
		str.setStatuscode(HttpStatus.CREATED.value());
		return new ResponseEntity<ResponseStructure<Cart>>(str,HttpStatus.CREATED);
	}
}
